<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#e0f7fa"
        android:text="Logo/image"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1c1f1f"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/text1"
        android:layout_centerInParent="true"
        android:background="#bacfbd"
        android:text="Title"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1a1d1b"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/text2"
        android:background="#cfcccc"
        android:text="Block of text"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1b1b1b"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/imgbtn1"
        android:layout_width="205dp"
        android:layout_height="180dp"
        android:layout_below="@id/text3"
        android:background="#e1f5fe"
        android:gravity="center_horizontal|center_vertical"
        android:text="Image Button 1"
        android:textColor="#1b1b1b"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/imgbtn2"
        android:layout_width="210dp"
        android:layout_height="180dp"
        android:layout_below="@id/text3"
        android:layout_toRightOf="@id/imgbtn1"
        android:background="#b3e5fc"
        android:text="Image Button 2"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1b1b1b"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/imgbtn3"
        android:layout_width="205dp"
        android:layout_height="180dp"
        android:layout_below="@id/imgbtn1"
        android:background="#b2ebf2"
        android:text="Image Button 3"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1b1b1b"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/imgbtn4"
        android:layout_width="210dp"
        android:layout_height="180dp"
        android:layout_below="@id/imgbtn2"
        android:layout_toRightOf="@id/imgbtn3"
        android:background="#e0f7fa"
        android:text="Image Button 4"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1b1b1b"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80d8ff"
        android:layout_below="@id/imgbtn3"
        android:text="Image Button 5"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1b1b1b"
        android:textSize="25dp"/>

</RelativeLayout>